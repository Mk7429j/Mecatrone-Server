    <div class="email-wrapper">
        <div class="header-gradient"></div>
        
        <div class="header">
            <div class="logo">MECATRONIX</div>
            <div class="logo-subtitle">Innovation Redefined</div>
            <div class="alert-icon">üö®</div>
        </div>
        
        <div class="content">
            <div class="alert-title">
                üì© NEW ENQUIRY RECEIVED
            </div>
            
            <!-- Info Grid -->
            <table class="info-grid" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td width="50%" style="padding: 8px;">
                        <div class="info-card">
                            <div class="info-label">üë§ NAME</div>
                            <div class="info-value <%= typeof name !== 'undefined' && name ? '' : 'na-value' %>">
                                <%= typeof name !== 'undefined' && name ? name : 'N/A' %>
                            </div>
                        </div>
                    </td>
                    <td width="50%" style="padding: 8px;">
                        <div class="info-card">
                            <div class="info-label">üìß EMAIL</div>
                            <div class="info-value <%= typeof email !== 'undefined' && email ? '' : 'na-value' %>">
                                <%= typeof email !== 'undefined' && email ? email : 'N/A' %>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td width="50%" style="padding: 8px;">
                        <div class="info-card">
                            <div class="info-label">üìû PHONE</div>
                            <div class="info-value <%= typeof phone !== 'undefined' && phone ? '' : 'na-value' %>">
                                <%= typeof phone !== 'undefined' && phone ? phone : 'N/A' %>
                            </div>
                        </div>
                    </td>
                    <td width="50%" style="padding: 8px;">
                        <div class="info-card">
                            <div class="info-label">üè¢ COMPANY</div>
                            <div class="info-value <%= typeof company !== 'undefined' && company ? '' : 'na-value' %>">
                                <%= typeof company !== 'undefined' && company ? company : 'N/A' %>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            
            <div class="message-section">
                <div class="message-header">
                    üí¨ MESSAGE
                </div>
                
                <div class="message-box">
                    <% if (typeof message !== 'undefined' && message) { %>
                        <div class="message-content"><%= message %></div>
                    <% } else { %>
                        <div class="no-message">No message provided</div>
                    <% } %>
                </div>
            </div>
            
            <div class="priority-section">
                <div class="priority-header">
                    üéØ PRIORITY ENQUIRY
                </div>
                <p class="priority-text">
                    This enquiry requires immediate attention. Please respond within 24 hours to ensure excellent customer service.
                </p>
            </div>
            
            <div class="timestamp">
                ‚è∞ <span>Received:</span> <%= typeof timestamp !== 'undefined' ? timestamp : new Date().toLocaleString() %> ‚Ä¢ üÜî <span>Reference:</span> #<%= typeof enquiryId !== 'undefined' ? enquiryId : 'REF-' + Date.now() %>
            </div>
            
            <div class="divider"></div>
            
            <p style="text-align: center; color: #a3a3a3; font-size: 14px; line-height: 1.6;">
                This enquiry was automatically generated from the MECATRONIX contact form.<br>
                Please log into the admin dashboard to manage this enquiry.
            </p>
        </div>
        
        <div class="footer">
            <div class="signature">
                Automated Notification<br>
                <span class="team-name">MECATRONIX Admin System</span>
            </div>
            
            <div class="contact-info">
                üåê www.mecatronix.com<br>
                üìß enquiries@mecatronix.com<br>
                üìû +1 (555) 123-INNOVATE
            </div>
        </div>
    </div>
    
    <!--[if mso]>
    </td></tr></table>
    </div>
    <![endif]-->
</body>
</html>